{
  "name": "@resco/lords",
  "private": "false",
  "type": "module",
  "version": "0.0.22",
  "description": "A small utilies (lords) for projects.",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "sideEffects": false,
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "release": "release-it",
    "test": "vitest run --typecheck",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "check": "pnpx @biomejs/biome check --apply ./",
    "build": "tsup"
  },
  "author": "RescoDevelopment",
  "license": "ISC",
  "devDependencies": {
    "@the-minimal/validator": "^0.1.1",
    "@types/js-yaml": "^4.0.9",
    "@vitest/coverage-v8": "1.5.0",
    "release-it": "17.2.0",
    "tsup": "8.0.2",
    "vite-tsconfig-paths": "4.3.2",
    "vitest": "1.5.0"
  },
  "peerDependencies": {
    "typescript": "5.4.5",
    "@the-minimal/validator": "^0.1.1"
  },
  "dependencies": {
    "js-yaml": "^4.1.0"
  }
}
